{
  "widgets": {
    "sectionHeader": { "type": "label", "style": "header", "padding": 6 },
    "muted": { "type": "label", "style": "mutedLabel", "padding": 4 },
    "chip": { "type": "label", "style": "chip", "padding": 6 },
    "divider": { "type": "rect", "h": 2, "style": "divider" },
    "treeRow": { "type": "row", "spacing": 6 },
    "treeLabel": { "type": "label", "style": "treeItem", "padding": 6 },
    "treeHeader": { "type": "label", "style": "treeHeader", "padding": 6 },
    "treeSpacer": { "type": "spacer", "h": 18 },
    "card": { "type": "label", "style": "borderedCard", "padding": 10 }
  },
  "layout": {
    "type": "row",
    "x": 16,
    "y": 16,
    "spacing": 16,
    "children": [
      {
        "type": "column",
        "style": "panelPrimary",
        "scrollStatic": true,
        "scrollbar": true,
        "scrollbarWidth": 12,
        "maxHeight": 640,
        "spacing": 12,
        "children": [
          { "use": "sectionHeader", "text": "Загруженная сцена" },
          { "use": "divider", "w": 360 },
          { "use": "muted", "text": "Путь", "style": "mutedLabel" },
          { "use": "card", "textBinding": "scenePath" },
          { "use": "muted", "text": "Название" },
          { "use": "card", "textBinding": "sceneName" },
          { "use": "muted", "text": "Автор" },
          { "use": "card", "textBinding": "sceneAuthor" },
          { "use": "muted", "text": "Статистика" },
          { "use": "card", "textBinding": "sceneStats" },
          { "use": "divider", "w": 360 },
          { "use": "sectionHeader", "text": "Иерархия" },
          {
            "type": "column",
            "id": "sceneHierarchy",
            "style": "panelSecondary",
            "scrollStatic": true,
            "scrollbar": true,
            "maxHeight": 480,
            "spacing": 4
          }
        ]
      },
      {
        "type": "column",
        "style": "panelSecondary",
        "scrollStatic": true,
        "scrollbar": true,
        "maxHeight": 640,
        "spacing": 10,
        "children": [
          { "use": "sectionHeader", "text": "Материалы" },
          { "type": "column", "id": "materialsList", "spacing": 4 },
          { "use": "divider", "w": 340 },
          { "use": "sectionHeader", "text": "Соединения" },
          { "type": "column", "id": "jointsList", "spacing": 4 },
          { "use": "divider", "w": 340 },
          { "use": "sectionHeader", "text": "Сборки и анализ" },
          { "type": "column", "id": "analysisList", "spacing": 4 }
        ]
      }
    ]
  }
}
