              { "use": "spacer" },
              { "use": "mutedLabel", "text": "Действия", "style": "mutedLabel" },
              { "use": "divider", "w": 280 },
              { "use": "primaryButton", "id": "btn01", "text": "Button 01", "clickValue": "btn01" },
              { "use": "primaryButton", "id": "btn02", "text": "Button 02", "clickValue": "btn02" },
