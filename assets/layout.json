{
  "widgets": {
    "primaryButton": { "type": "button", "w": 280, "h": 32, "style": "primaryButton", "onClick": "lastAction", "padding": 8 },
    "sliderBase": { "type": "hslider", "w": 320, "h": 18, "style": "sliderMain", "min": 0, "max": 1 },
    "spacer": { "type": "spacer", "h": 10 },
    "divider": { "type": "rect", "h": 2, "style": "divider" },
    "mutedLabel": { "type": "label", "style": "mutedLabel", "padding": 2 },
    "checkbox": { "type": "checkbox", "w": 22, "h": 22, "style": "checkbox" },
